(function(window, document, undefined){
  "use strict";

  window.purpur = {

    tmpl: '<span class="icon" data-icon="{{iconName}}" data-icon-size="{{iconSize}}"><span class="icon--wrapper"><svg class="icon--cnt"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="{{assetPath}}#{{iconName}}-icon" x="0" y="0"></use></svg></span></span>',

    template: function(options) {
      var result = "" + this.tmpl;
      for (var key in options) {
        result = result.replace(new RegExp('{{' + key + '}}', 'g'), options[key])
      }
      return result;
    },

    size: function (s) {
      return (<%= Purpur::ICON_SIZES.to_json %>)[s || 'medium'];
    },

    name: function (n) {
      return (<%= Purpur::ICON_SYNONIMS_HASH.to_json %>)[n] || n;
    },

    assetPath: function () {
      return document.querySelector('meta[name=purpurAssetPath]').content;
    },

    html: function (n, s) {
      return this.template({ iconName: this.name(n), iconSize: this.size(s), assetPath: this.assetPath() });
    }
  };

})(window, window.document)
